<header class='bg-orange-500 text-xs'>

  <div class='flex justify-between items-center'>
    <div class='flex items-center gap-1'>
      <%= image_tag 'yc.svg', class: 'border border-1 border-white m-1' %>
      <div>
        <span class='font-semibold whitespace-nowrap mr-2 text-sm'><%= link_to 'Slacker News', root_path %></span>
        <div class='flex gap-1 text-xs'>
          <% navigation_links.each_with_index do |link, index| %>
            <p><%= link_to link[:name], link[:path] %></p>
            <p><%= '|' unless index == navigation_links.size - 1 %></p>
          <% end %>
        </div>
      </div>
    </div>

    <div class='flex gap-1 mr-2'>
      <% if current_user %>
        <p><%= current_user.username %></p>
        <p>(123)</p>
        <p>|</p>
        <p><%= link_to 'logout', session_path, data: {turbo_method: :delete} %></p>
      <% else %>
        <p><%= link_to 'login', login_path %></p>
      <% end %>
    </div>
  </div>

</header>
