<header class='flex px-2 mt-2 bg-orange-500 justify-between items-center text-sm'>
    <%= image_tag 'yc.svg', class: 'border border-1 border-white' %>
    <h1 class='text-base font-medium whitespace-nowrap'><%= link_to 'Slacker News', root_path %></h1>

    <% links = [
      {name: 'news', path: '#'},
      {name: 'threads', path: '#'},
      {name: 'past', path: '#'},
      {name: 'comments', path: '#'},
      {name: 'ask', path: '#'},
      {name: 'show', path: '#'},
      {name: 'jobs', path: '#'},
      {name: 'submit', path: new_post_path},
    ]
     %>

      <% links.each_with_index do |link, index| %>
      <p><%= link_to link[:name], link[:path] %></p>  
      <p><%= '|' unless index == links.size - 1 %></p>
      <% end %>

      <div class='flex gap-2'>
        <% if current_user %>
            <p><%= current_user.username %>
            <p><%= link_to 'logout', session_path, data: {turbo_method: :delete} %></p>
          <% else %>
            <p><%= link_to 'login', login_path %></p>
        <% end %>
  </div>
</header>