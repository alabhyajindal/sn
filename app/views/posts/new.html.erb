<%= form_with model: @post, html: {autocomplete: 'off'} do |f| %>

  <%= render 'shared/errors', object: @post %>

  <div class='grid gap-x-4 gap-y-2 grid-cols-[min-content_min-content] text-xs items-center text-gray-600'>

    <%= f.label :title, 'title' %>
    <%= f.text_field :title, autofocus: true, required: true, class: 'text-xs px-1 m-0 text-gray-900 font-mono rounded-sm' %>
    <%= f.label :url, 'url' %>
    <%= f.url_field :url, class: 'text-xs px-1 m-0 text-gray-900 font-mono rounded-sm' %>
    <%= f.label :text, 'text' %>
    <%= f.text_area :text, size: '39x4', class: 'text-xs px-1 m-0 text-gray-900 font-mono rounded-sm resize' %>
    <%= f.submit 'submit', class: 'btn-submit col-start-2' %>

    <p class='mt-4 text-gray-600 col-start-2'>Leave url blank to submit a question for discussion. If there is no url, text will appear at the top of the thread. If there is a url, text is optional.</p>

  </div>

<% end %>
