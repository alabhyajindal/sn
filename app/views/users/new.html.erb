<%= form_with model: @user, html: {autocomplete: 'off'} do |f| %>
  <%= render 'shared/errors', object: @user %>

  <div class='mt-4 grid grid-cols-[min-content_min-content] items-center gap-x-4 gap-y-2'>

    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit 'create account', class: 'btn-submit col-start-2' %>

    <h3 class='col-start-2 mt-4'>Or <%= link_to 'login', login_path, class: 'underline' %></h3>

  </div>

<% end %>
